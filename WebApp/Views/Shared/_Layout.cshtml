<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Duo</title> <!-- Ensure title is set correctly -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/WebApp.styles.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" /> <!-- Font Awesome for icons -->
    <style>
        /* Sidebar styles */
        body {
            display: flex;
            margin: 0; /* Ensure no margin on body */
        }

        .sidebar {
            height: 100vh; /* Full height of the viewport */
            width: 250px; /* Width of the sidebar */
            position: fixed;
            top: 0;
            left: 0; /* Show sidebar */
            background-color: #f8f9fa; /* Light background for sidebar */
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
            z-index: 1000;
        }

            .sidebar .nav-link {
                color: #333; /* Text color */
            }

                .sidebar .nav-link:hover {
                    background-color: #e9ecef; /* Hover effect */
                }

        /* Main content styles */
        .main-content {
            margin-left: 250px; /* Adjust margin to accommodate sidebar */
            padding: 20px; /* Add some padding */
            flex-grow: 1; /* Allow main content to grow */
        }

        /* Dark mode styles */
        body.dark-mode {
            background-color: #121212;
            color: #ffffff;
        }

        .sidebar.dark-mode {
            background-color: #1e1e1e;
        }

            .sidebar.dark-mode .nav-link {
                color: #ffffff;
            }

                .sidebar.dark-mode .nav-link:hover {
                    background-color: #333;
                }
    </style>
</head>
<body>
    <div class="sidebar" id="sidebar">
        <nav class="nav flex-column">
            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            <a class="nav-link" asp-area="" asp-controller="Students" asp-action="Index">Students</a>
            <a class="nav-link" asp-area="" asp-controller="Students" asp-action="Course">Course</a>
            <a class="nav-link" asp-area="" asp-controller="Students" asp-action="Room">Room</a>
            <a class="nav-link" asp-area="" asp-controller="Students" asp-action="Section">Section</a>
            <a class="nav-link" asp-area="" asp-controller="Students" asp-action="Teacher">Teacher</a>
        </nav>
    </div>

    <div class="main-content">
        <header>
            <h1>@ViewData["Title"]</h1> <!-- Display the title in the main content -->
        </header>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>